          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const timestamp = Date.now();",
                  "pm.environment.set('timestamp', timestamp);",
                  "",
                  "if (pm.response.code === 201) {",
                  "    pm.test('Status code is 201', function () {",
                  "        pm.response.to.have.status(201);",
                  "    });",
                  "    ",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('admin_user_id', jsonData.id);",
                  "    console.log('Admin created with ID:', jsonData.id);",
                  "} else if (pm.response.code === 409) {",
                  "    console.log('Admin already exists, using existing user');",
                  "    // Используем существующего пользователя",
                  "    pm.environment.set('admin_user_id', 1);",
                  "    pm.test('Using existing admin', function () {",
                  "        pm.expect(pm.response.code).to.be.oneOf([201, 409]);",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Администратор Комментариев\",\n  \"email\": \"admin.comments.{{timestamp}}@test.com\"\n}"

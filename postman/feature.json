                  "console.log('Category ID:', pm.environment.get('category_id'));",
                  "const now = new Date();",
                  "const futureDate = new Date(now.getTime() + 3 * 24 * 60 * 60 * 1000); // +3 дня",
                  "const eventDateStr = futureDate.toISOString().replace('T', ' ').substring(0, 19);",
                  "pm.environment.set('event_date', eventDateStr);",
                  "console.log('Event date will be:', eventDateStr);"
                ],
